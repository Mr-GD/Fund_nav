<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fundNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基金名称"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fundCodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基金代码"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/dailyChangeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当日涨幅"
            android:textSize="12sp"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/dailyChangeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00%"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/dailyProfitTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当日收益"
            android:textSize="12sp"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/dailyProfitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/holdingAmountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="持有金额"
            android:textSize="12sp"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/holdingAmountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="删除" />

</LinearLayout>